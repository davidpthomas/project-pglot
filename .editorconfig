root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false
curly_bracket_next_line = true
spaces_around_operators = false

[*.{markdown,md}]
trim_trailing_whitespace = false

[*.py]
indent_size = 4
quote_type = double
